{
    "manifest_version": 2,
    "name": "Go Links",
    "version": "0.1",
    
    "description": "Fast-accessing your websites with a personal URL shortener",

    "background": {
        "page": "linkify.html",
        "persistent": true
    },
    
    "browser_action": {
        "default_title": "Go Links",
        "default_popup": "popup/popup.html"
    },

    "options_ui": {
        "page": "options/options.html"
    },

    "permissions": [
        "<all_urls>",
        "storage",
        "alarms",
        "webRequest",
        "webRequestBlocking"
    ]
}
